{% extends 'base.html.twig' %}

 {% form_theme image 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-12" style="margin-bottom: 30px;">
        {% for file in files %}
            <div class="col-md-4 col-xs-12">
                <img src="/uploads/images/{{ file.file }}" width="100%">
                <a class="btn btn-danger" href="">Удалить</a>
            </div>
        {% endfor %}
    </div>
    {% if count < 3 %}
        <div class="col-md-6 col-md-offset-3 col-xs-12">
            <h2>Добавить изображение {{ canopy.number }} {{ canopy.main }}</h2>
            {{ form_start(image) }}
            {{ form_widget(image) }}
            <div class="form-group text-center">
                <button type="submit" class="btn btn-default">Загрузить</button>
            </div>
            {{ form_end(image) }}
        </div>
    {% endif %}
{% endblock %}