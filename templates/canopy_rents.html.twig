{% extends 'base.html.twig' %}

 {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <h1 class="text-center">Аренды парашютных систем</h1>
    <div class="col-md-12 col-xs-12">
        <div class="col-md-offset-3 col-md-6 col-xs-12">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="clearfix"></div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-default">Показать</button>
            </div>
            {{ form_end(form) }}
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Инв. номер</th>
                <th>Число аренд</th>
            </tr>
            </thead>
            <tbody>
            {% for result in results %}
                <tr>
                    <td>{{ result.number }}</td>
                    <td>{{ result.sum }}</td>
                </tr>
            {% else %}
                <tr><td colspan="">Нет данных за этот месяц</td> </tr>
            {% endfor %}
            {% if sum > 0 %}
                <tr><td>ВСЕГО</td><td>{{ sum }}</td></tr>
            {% endif %}
            </tbody>
        </table>

    </div>

{% endblock %}